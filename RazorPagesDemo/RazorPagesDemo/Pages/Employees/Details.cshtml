@page "/Employees/View/{id:min(1)}"
@model RazorPagesDemo.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Details";
    var photoPath = "~/Images/" + (Model.Employee.PhotoPath ?? "noimage.png");
}

<h1 class="mt-4 mb-4">Details</h1>

<div class="row justify-content-center m-3">
    @if (Model.Message != null)
    {
        <div class="col-sm-8">
            <div class="alert alert-primary mt-4 mb-4">
                @Model.Message
            </div>
        </div>
    }
    <div class="col-sm-8">        
        <vc:head-count department="@Model.Employee.Department" />
    </div>
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top image-thumbnail" src="@photoPath" asp-append-version="true" />
                <h4 class="mt-4">Employee ID: @Model.Employee.Id</h4>
                <h4>Email: @Model.Employee.Email</h4>
                <h4>Department: @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-page="index" class="btn btn-primary w-100px">Back</a>
                <a asp-page="/Employees/Edit" asp-route-Id="@Model.Employee.Id" class="btn btn-primary w-100px">Edit</a>
                <a href="#" class="btn btn-danger w-100px">Delete</a>
            </div>
        </div>
    </div>
</div>
