@using RazorPagesDemo.Models

@model Employee
@{
    var photoPath = $"~/Images/{Model.PhotoPath ?? "noimage.png"}";
    var employee = Model;
    var showButtons = (bool)ViewData["ShowButtons"];
}

<div class="card m-3" style="min-width: 18rem; max-width: 30.5%">
    <div class="card-header">
        <h3>@employee.Name</h3>
    </div>
    <img class="card-img-top image-thumbnail" src="@photoPath" asp-append-version="true" />
    @if (showButtons)
    {
        <div class="card-footer text-center">
            <a asp-page="/Employees/Details" asp-route-Id="@employee.Id" class="btn btn-primary m-1 w-100px">View</a>
            <a asp-page="/Employees/Edit" asp-route-Id="@employee.Id" class="btn btn-primary m-1 w-100px">Edit</a>
            <a asp-page="/Employees/Delete" asp-route-Id="@employee.Id" class="btn btn-danger m-1 w-100px">Delete</a>
        </div>
    }
</div>
